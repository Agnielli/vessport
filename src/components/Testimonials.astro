// Sección de testimonios de clientes
const testimonials = [
  {
    id: 1,
    name: "Carlos Martínez",
    organization: "Club Atletismo Sureste",
    role: "Representante",
    testimonial: "Las camisetas que nos hizo VES Sport superaron todas nuestras expectativas. La calidad del full-print es excepcional y el servicio al cliente fue impecable. Nuestros jugadores están encantados con el resultado.",
    rating: 5,
    image: null
  },
  {
    id: 2,
    name: "María González",
    organization: "Maratón Costa del Sol",
    role: "Organizadora",
    testimonial: "Trabajamos con VES Sport para nuestro evento anual y el resultado fue fantástico. Entregaron 500 camisetas en tiempo récord y la calidad fue consistente en todas. Definitivamente repetiremos.",
    rating: 5,
    image: null
  },
  {
    id: 3,
    name: "Antonio Ruiz",
    organization: "Hermandad de Garrucha",
    role: "Hermano Mayor",
    testimonial: "Necesitábamos camisetas especiales para nuestra peregrinación y VES Sport entendió perfectamente nuestras necesidades. El diseño respetó nuestras tradiciones y la calidad fue excelente.",
    rating: 5,
    image: null
  },
  {
    id: 4,
    name: "Eliana Berdoy",
    organization: "Asociación Construyendo Comunidad",
    role: "Secretaria",
    testimonial: "Para nuestro mercadillo solidario necesitábamos camisetas que identificaran a los voluntarios. VES Sport nos ofreció un precio muy competitivo y un servicio personalizado excepcional.",
    rating: 5,
    image: null
  },
  {
    id: 5,
    name: "José Luis Pérez",
    organization: "Empresa Construcciones del Sur",
    role: "Gerente",
    testimonial: "Buscábamos uniformes corporativos de calidad para nuestro equipo. VES Sport nos proporcionó camisetas duraderas y cómodas que han resistido perfectamente el uso diario en obra.",
    rating: 5,
    image: null
  },
  {
    id: 6,
    name: "Carmen Jiménez",
    organization: "Equipo Futbol Sala Playas de Garrucha",
    role: "Capitana",
    testimonial: "Como equipo femenino, queríamos camisetas que fueran tanto funcionales como estéticamente atractivas. VES Sport logró el equilibrio perfecto y nos sentimos geniales jugando con ellas.",
    rating: 5,
    image: null
  }
];
---

<section id="testimonios" class="py-20 bg-gray-50">
  <div class="container max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2
        class="text-3xl md:text-4xl font-display font-bold text-gray-900 mb-4"
      >
        Lo que Opinan Nuestros Clientes
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        La satisfacción de nuestros clientes es nuestra mejor carta de presentación
      </p>
    </div>

    <!-- Grid de testimonios -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {testimonials.map((testimonial) => (
        <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">

          <!-- Testimonial text -->
          <blockquote class="text-gray-700 relative mb-6 leading-relaxed">
            <svg class="absolute z-0 start-0 top-4 h-14 w-14 -translate-x-6 -translate-y-8 transform text-primary/30" height="16" viewBox="0 0 16 16" width="16" fill="currentColor"><path d="M7.39762 10.3C7.39762 11.0733 7.14888 11.7 6.6514 12.18C6.15392 12.6333 5.52552 12.86 4.76621 12.86C3.84979 12.86 3.09047 12.5533 2.48825 11.94C1.91222 11.3266 1.62421 10.4467 1.62421 9.29999C1.62421 8.07332 1.96459 6.87332 2.64535 5.69999C3.35231 4.49999 4.33418 3.55332 5.59098 2.85999L6.4943 4.25999C5.81354 4.73999 5.26369 5.27332 4.84476 5.85999C4.45201 6.44666 4.19017 7.12666 4.05926 7.89999C4.29491 7.79332 4.56983 7.73999 4.88403 7.73999C5.61716 7.73999 6.21938 7.97999 6.69067 8.45999C7.16197 8.93999 7.39762 9.55333 7.39762 10.3ZM14.6242 10.3C14.6242 11.0733 14.3755 11.7 13.878 12.18C13.3805 12.6333 12.7521 12.86 11.9928 12.86C11.0764 12.86 10.3171 12.5533 9.71484 11.94C9.13881 11.3266 8.85079 10.4467 8.85079 9.29999C8.85079 8.07332 9.19117 6.87332 9.87194 5.69999C10.5789 4.49999 11.5608 3.55332 12.8176 2.85999L13.7209 4.25999C13.0401 4.73999 12.4903 5.27332 12.0713 5.85999C11.6786 6.44666 11.4168 7.12666 11.2858 7.89999C11.5215 7.79332 11.7964 7.73999 12.1106 7.73999C12.8437 7.73999 13.446 7.97999 13.9173 8.45999C14.3886 8.93999 14.6242 9.55333 14.6242 10.3Z" class=""></path></svg>
            <span class="relative z-20 top-3">{testimonial.testimonial}</span>
          </blockquote>

          {/* <!-- Rating stars -->
          <div class="flex items-center mb-4">
            {Array.from({ length: testimonial.rating }, (_, i) => (
              <svg key={i} class="w-5 h-5 text-yellow fill-current" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div> */}

          <!-- Client info -->
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center mr-4">
              <span class="text-white font-semibold text-lg">
                {testimonial.name.charAt(0)}
              </span>
            </div>
            <div>
              <div class="font-semibold text-gray-900">{testimonial.name}</div>
              <div class="text-sm text-gray-600">{testimonial.role}</div>
              <div class="text-sm text-primary font-medium">{testimonial.organization}</div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-6">
        ¿Quieres ser nuestro próximo cliente satisfecho?
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="#contacto"
          class="bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-lg font-semibold transition-colors"
        >
          Solicita tu Presupuesto
        </a>
        <a
          href="#productos"
          class="border-2 border-primary text-primary hover:bg-primary hover:text-white px-8 py-3 rounded-lg font-semibold transition-colors"
        >
          Ver Nuestros Productos
        </a>
      </div>
    </div>
  </div>
</section>

