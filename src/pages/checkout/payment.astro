---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Finalizar Compra - VES Sport">
  <div id="checkout-app"></div>
</Layout>

<script>
  import { loadStripe, redirectToCheckout } from '../../lib/stripe/client';

  class CheckoutPage {
    private cart: any[] = [];
    private loading = false;

    constructor() {
      this.loadCart();
      this.render();
      this.setupEventListeners();
    }

    private loadCart() {
      const savedCart = localStorage.getItem('ves-sport-cart');
      if (savedCart) {
        this.cart = JSON.parse(savedCart);
      }
    }

    private calculateTotals() {
      const subtotal = this.cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
      const designFees = this.cart.reduce((sum, item) => {
        if (item.designId && (item.designSalesCount || 0) < 10) {
          return sum + (80 * item.quantity);
        }
        return sum;
      }, 0);
      const shipping = subtotal > 50 ? 0 : 5.99;
      const tax = (subtotal + designFees + shipping) * 0.21;
      const total = subtotal + designFees + shipping + tax;

      return {
        subtotal: Math.round(subtotal * 100) / 100,
        designFees: Math.round(designFees * 100) / 100,
        shipping: Math.round(shipping * 100) / 100,
        tax: Math.round(tax * 100) / 100,
        total: Math.round(total * 100) / 100,
      };
    }

    private render() {
      const app = document.getElementById('checkout-app');
      if (!app) return;

      if (this.cart.length === 0) {
        app.innerHTML = `
          <div class="min-h-screen bg-gray-50 flex items-center justify-center">
            <div class="text-center">
              <h1 class="text-2xl font-bold text-gray-900 mb-4">Tu carrito está vacío</h1>
              <a href="/#productos" class="bg-primary hover:bg-primary-dark text-white px-6 py-3 rounded-lg font-semibold">
                Ver Productos
              </a>
            </div>
          </div>
        `;
        return;
      }

      const totals = this.calculateTotals();

      app.innerHTML = `
        <div class="min-h-screen bg-gray-50 py-12">
          <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
              <h1 class="text-3xl font-bold text-gray-900 mb-8">Finalizar Compra</h1>

              <div class="grid lg:grid-cols-2 gap-8">
                <!-- Resumen del Pedido -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                  <h2 class="text-xl font-bold text-gray-900 mb-6">Resumen del Pedido</h2>
                  
                  <div class="space-y-4 mb-6">
                    ${this.cart.map(item => `
                      <div class="flex items-center space-x-4 p-4 bg-gray-50 rounded-lg">
                        <div class="w-16 h-16 bg-gradient-to-br from-primary to-primary-dark rounded-lg flex items-center justify-center">
                          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                          </svg>
                        </div>
                        
                        <div class="flex-1">
                          <h4 class="font-semibold text-gray-900">${item.name}</h4>
                          <p class="text-sm text-gray-600">
                            Talla: ${item.size} | Color: ${item.color} | Cantidad: ${item.quantity}
                          </p>
                          ${item.designId ? `
                            <p class="text-sm ${(item.designSalesCount || 0) >= 10 ? 'text-green-600' : 'text-orange-600'}">
                              ${(item.designSalesCount || 0) >= 10 ? 'Diseño gratuito ✓' : `Diseño: €80 (${item.designSalesCount || 0}/10 ventas)`}
                            </p>
                          ` : ''}
                          <div class="text-sm font-medium text-gray-900 mt-1">
                            €${item.price.toFixed(2)} × ${item.quantity}
                            ${item.designId && (item.designSalesCount || 0) < 10 ? ` + €80 diseño × ${item.quantity}` : ''}
                          </div>
                        </div>
                      </div>
                    `).join('')}
                  </div>

                  <!-- Totales -->
                  <div class="border-t border-gray-200 pt-4 space-y-2">
                    <div class="flex justify-between text-sm">
                      <span>Subtotal:</span>
                      <span>€${totals.subtotal.toFixed(2)}</span>
                    </div>
                    ${totals.designFees > 0 ? `
                      <div class="flex justify-between text-sm text-orange-600">
                        <span>Tarifas de diseño:</span>
                        <span>€${totals.designFees.toFixed(2)}</span>
                      </div>
                    ` : ''}
                    <div class="flex justify-between text-sm">
                      <span>Envío:</span>
                      <span>
                        ${totals.shipping === 0 ? 
                          '<span class="text-green-600">Gratis</span>' : 
                          `€${totals.shipping.toFixed(2)}`
                        }
                      </span>
                    </div>
                    <div class="flex justify-between text-sm">
                      <span>IVA (21%):</span>
                      <span>€${totals.tax.toFixed(2)}</span>
                    </div>
                    <div class="flex justify-between text-lg font-bold border-t border-gray-200 pt-2">
                      <span>Total:</span>
                      <span class="text-primary">€${totals.total.toFixed(2)}</span>
                    </div>
                  </div>
                </div>

                <!-- Información de Pago -->
                <div class="space-y-6">
                  <!-- Seguridad -->
                  <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Pago Seguro</h3>
                    <div class="space-y-3">
                      <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <span class="text-sm text-gray-700">Encriptación SSL de 256 bits</span>
                      </div>
                      <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                        <span class="text-sm text-gray-700">Procesado por Stripe</span>
                      </div>
                      <div class="flex items-center space-x-3">
                        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                        <span class="text-sm text-gray-700">Envío asegurado</span>
                      </div>
                    </div>
                  </div>

                  <!-- Botón de Pago -->
                  <div class="bg-white rounded-xl shadow-lg p-6">
                    <button
                      id="checkout-button"
                      class="w-full bg-primary hover:bg-primary-dark text-white py-4 px-6 rounded-lg font-bold text-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center space-x-2"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                      </svg>
                      <span>Pagar €${totals.total.toFixed(2)}</span>
                    </button>
                    
                    <p class="text-xs text-gray-500 text-center mt-3">
                      Al hacer clic en "Pagar", aceptas nuestros términos y condiciones
                    </p>
                  </div>

                  <!-- Métodos de Pago -->
                  <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="text-sm font-medium text-gray-700 mb-3">Métodos de pago aceptados:</h3>
                    <div class="flex items-center space-x-4">
                      <div class="flex items-center space-x-2">
                        <div class="w-8 h-5 bg-blue-600 rounded text-white text-xs flex items-center justify-center font-bold">
                          VISA
                        </div>
                        <div class="w-8 h-5 bg-red-600 rounded text-white text-xs flex items-center justify-center font-bold">
                          MC
                        </div>
                        <div class="w-8 h-5 bg-blue-500 rounded text-white text-xs flex items-center justify-center font-bold">
                          AMEX
                        </div>
                      </div>
                      <span class="text-xs text-gray-500">y más...</span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      `;
    }

    private setupEventListeners() {
      document.addEventListener('click', async (e) => {
        const target = e.target as HTMLElement;
        
        if (target.id === 'checkout-button') {
          await this.handleCheckout();
        }
      });
    }

    private async handleCheckout() {
      if (this.loading || this.cart.length === 0) return;

      this.loading = true;
      const button = document.getElementById('checkout-button') as HTMLButtonElement;
      
      if (button) {
        button.disabled = true;
        button.innerHTML = `
          <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>Procesando...</span>
        `;
      }

      try {
        await redirectToCheckout(this.cart, {
          source: 'checkout_page',
          itemCount: this.cart.length
        });
      } catch (error: any) {
        console.error('Checkout error:', error);
        alert(error.message || 'Error al procesar el pago');
        
        if (button) {
          button.disabled = false;
          button.innerHTML = `
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            <span>Pagar €${this.calculateTotals().total.toFixed(2)}</span>
          `;
        }
      } finally {
        this.loading = false;
      }
    }
  }

  // Inicializar cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    new CheckoutPage();
  });
</script>